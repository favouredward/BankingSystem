{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  // ==========================================================
  // ✅ JWT AUTHENTICATION SETTINGS
  // ==========================================================
  "JwtSettings": {
    "Secret": "A_VERY_LONG_AND_SECURE_RANDOM_STRING_OF_AT_LEAST_32_CHARACTERS_TO_MEET_SECURITY_REQUIREMENTS_12345",
    "Issuer": "BankingSystemAPI",
    "Audience": "BankingSystemClient",
    "ExpiryMinutes": 60
  },

  // ==========================================================
  // ✅ ALLOWED HOSTS
  // ==========================================================
  "AllowedHosts": "*",

  // ==========================================================
  // ✅ DATABASE & CACHE CONNECTION STRINGS
  // ==========================================================
  "ConnectionStrings": {
    "DefaultConnection": "Server=DESKTOP-QEAT5OJ\\SQLEXPRESS01;Database=bankingsystemdb;Integrated Security=True;TrustServerCertificate=True;",
    "Redis": "localhost:6379"
  },

  // ==========================================================
  // ✅ SERILOG CONFIGURATION (LOG TO CONSOLE + FILE)
  // ==========================================================
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "shared": true,
          "retainedFileCountLimit": 10
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "BankingSystemAPI"
    }
  }
}
